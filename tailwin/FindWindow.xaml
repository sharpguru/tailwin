<Window x:Class="tailwin.FindWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:tailwin" 
        mc:Ignorable="d"
        Title="Find" Height="126.278" Width="260.269" ResizeMode="NoResize">

    <StackPanel Margin="10,10,21.333,-39.333" Height="200" >
        <StackPanel Orientation="horizontal">
            <TextBlock Margin="7">Find:</TextBlock>
            <TextBox x:Name="txtFind" Margin="5" Width="136" KeyboardNavigation.IsTabStop="True" KeyboardNavigation.TabIndex="10" IsVisibleChanged="txtFind_IsVisibleChanged"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 20 0 0">
            <Button x:Name="btnFind_Submit" Click="btnFind_Submit_Click" KeyboardNavigation.TabIndex="30" Margin="5" IsDefault="True">Search</Button>
            <Button x:Name="btnFind_Cancel" Click="btnFind_Cancel_Click" KeyboardNavigation.TabIndex="40" Margin="5" IsCancel="True">Cancel</Button>
        </StackPanel>
    </StackPanel>
</Window>
